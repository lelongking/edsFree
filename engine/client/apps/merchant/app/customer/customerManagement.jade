template(name="customerManagement")
  #content.modern.customer-management
    .dual-content
      .dual-detail-wrapper
        .dual-detail
          .nano: .nano-content
            +customerManagementOverviewSection currentCustomer
            +customerManagementSalesHistorySection currentCustomer

      .dual-addon
        .search-filter.icon-search-8
          input(name='searchFilter' type="text" placeholder="tìm khách hàng...")
          if creationMode
            .lemon.btn.rounded.tiny.lime.icon-plus-6.create-command.createCustomerBtn

        .nano: .nano-content
          .list
            each customerLists
              .doc-item(class="{{activeClass 'customerManagementCurrentCustomer'}}")
                .avatar-wrapper: .avatar-image(class="missing"
                style="background-image:url('')") {{aliasLetter firstName}}
                .doc-info
                  .title {{name}}
                  .sub-title {{description}}
                  if debtTotalCash
                    .price-stamp
                      <b>{{formatNumber debtTotalCash}}</b>
                      span(style="font-size: 11px;") <b>VND</b>


