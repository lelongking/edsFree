template(name="orderManager")
  #content.modern.sales-app
    .dual-content
      .dual-detail-wrapper
        .dual-detail
          .nano: .nano-content
            +orderDetailSection sessionGet 'currentOrderBill'

      .dual-addon
        .search-filter.icon-search-8
          input(name='searchFilter' type="text" placeholder="tìm đơn hàng..." value="{{productTextSearch}}")

        .nano: .nano-content
          each details
            .group-wrapper
              .caption.group {{createdAt}}
                each data
                  .caption.inner.advanced.product-selection(class="{{activeClass 'currentOrderBill'}}")
                    +avatarImageComponent(avatar=avatarUrl alias=orderName)
                    span.text {{orderName}}
                      .commands {{momentFormat version.createdAt 'DD/MM/YYYY'}}
                    span.left-info {{getSellerName seller}}
                    span.right-info {{formatNumber finalPrice}} VND