template(name="priceBook")
  #content.modern.customer-management
    .dual-content
      .dual-detail-wrapper
        .dual-detail
          .nano: .nano-content
            +priceBookOverviewSection getSession 'currentPriceBook'

            if isPriceBookType 'default'
              +priceBookDetailSectionDefault getSession 'currentPriceBook'
            //if isPriceBookType 'customer'
            //  +priceBookDetailSectionCustomer {{getSession 'currentPriceBook'}}
            //if isPriceBookType 'provider'
            //  +priceBookDetailSectionProvider {{getSession 'currentPriceBook'}}

      .dual-addon
        .search-filter.icon-search-8
          input(name='searchFilter' type="text" placeholder="tìm bảng giá...")
          if getSession 'priceBookCreationMode'
            .lemon.btn.rounded.tiny.lime.icon-plus-6.create-command.createCustomerBtn

        .nano: .nano-content
          each priceBookSearches
            .group-wrapper
              .caption.group {{_id}}
              each childs
                .caption.inner(class="{{activeClass 'currentPriceBook'}}")
                  +avatarImageComponent(avatar=avatarUrl alias=firstName)
                  span.text
                    |{{name}}
                    if description
                      |({{description}})

