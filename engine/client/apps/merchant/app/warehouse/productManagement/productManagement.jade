template(name="productManagement")
  //#header
  //  .caption-row
  //    .title DANH SÁCH SẢN PHẨM
          
  #content.modern.product-management
    .dual-content
      .dual-detail-wrapper
        .dual-detail
          .nano: .nano-content
            +productManagementOverviewSection currentProduct
            +productManagementSalesHistorySection currentProduct

      .dual-addon
        .search-filter.icon-search-8
          input(name='searchFilter' type="text")
          if creationMode
            .lemon.btn.rounded.tiny.lime.icon-plus-6.create-command.createStockBtn

        .nano: .nano-content
          if showFilterSearch
            .group-wrapper
              each productFilterSearch
                .caption.inner(class="{{activeClass}}")
                  +avatarImageComponent(avatar=avatarUrl alias=name instance=this)
                  span.text {{name}}

          else
            each topSaleProducts
              .group-wrapper
                .caption.inner(class="{{activeClass}}")
                  +avatarImageComponent(avatar=avatarUrl alias=name instance=this)
                  span.text {{name}}

