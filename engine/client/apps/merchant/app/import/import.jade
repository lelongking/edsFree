template(name="import")
  #content.modern
    .dual-content
      .dual-detail-wrapper
        .dual-detail
          .nano: .nano-content
            +importDetailSection currentImport

      .dual-addon
        .search-filter.icon-search-8
          input(name='searchFilter' type="text" placeholder="tìm sản phẩm...")

        .nano: .nano-content
          .group-wrapper
            each unitProductSearches
              .caption.advanced.inner.product-selection(class="{{productSelectionActiveClass}}")
                +avatarImageComponent(avatar=avatarUrl alias=name)
                span.text {{name}}
                  .commands
                    span.icon-right-open-big.addImportDetail
                span.right-info {{unitName}}

  #footer.modern
    .editor-row
      .editor-wrapper.dual-spacer
      .editor-wrapper(style="width:180px")
        span.ilabel.optional công ty cung cấp
        +iSelect(options=providerSelectOptions class="field")
      .editor-wrapper(style="width: 160px; padding-right: 20px")
        span.ilabel.center chiết khấu
        +iSpinEdit(options=discountOptions)
      .editor-wrapper(style="width: 160px; padding-right: 20px")
        span.ilabel.center tiền nhận
        +iSpinEdit(options=depositOptions)


      .editor-wrapper.right
        button.flat.btn.lime.icon-award.importSubmit(type='submit') HOÀN TẤT
      .editor-wrapper.right
        button.flat.btn.blue.print-command(type='submit'): span.icon-print-6

    +tabComponent(options=tabOptions)
