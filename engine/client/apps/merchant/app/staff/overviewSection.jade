template(name="staffManagementOverviewSection")
  .section.top.panel.panel-default
    input.hidden.avatarFile(type="file")
    .panel-heading
      +avatarImageComponent(avatar=avatarUrl alias=fullName)
      .caption
        input.editable.dashed(name="staffName" value="{{fullName}}" maxlength="50")
        span.blured-color ({{genderName}})
      .sub1: span.editable Đăng nhập: {{userName}}
      .sub2: span.editable Doanh Số: 0 VND
      .commands
        if showEditCommand
          .lemon.btn.rounded.lime.icon-ok-6.syncStaffEdit
        if allowDelete
          .lemon.btn.rounded.red.icon-minus-4.staffDelete
    .panel-footer.has-details
      .editor-row
        .editor-wrapper(style="width: 300px")
          span.ilabel.optional phân quyền
          +iSelect(options=roleSelectOptions class="field")
        .editor-wrapper(style="width: 90px")
          span.ilabel.optional giới tính
          +iSelect(options=genderSelectOptions class="field")