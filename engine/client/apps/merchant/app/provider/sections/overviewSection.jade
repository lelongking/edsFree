template(name="providerManagementOverviewSection")
  .section.top.panel.panel-default
    input.hidden.avatarFile(type="file")
    .panel-heading
      +avatarImageComponent(avatar=avatarUrl alias=name)
      .caption
        input.editable.dashed(name="providerName" value="{{name}}" maxlength="50")
        if description
          span.blured-color ({{description}})
      .sub1: input.editable.dashed(name="providerPhone" value="{{phone}}" maxlength="20" size="15" placeholder="điện thoại")
      .sub2: input.editable(name="providerAddress" value="{{location.address}}" maxlength="100" size="50" placeholder="địa chỉ")
      .commands
        if showEditCommand
          .lemon.btn.rounded.lime.icon-ok-6.syncProviderEdit
        if showDeleteCommand
          .lemon.btn.rounded.red.icon-minus-4.providerDelete

    .panel-footer
      span.icon-angle-right