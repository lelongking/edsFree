template(name="providerManagementImportsHistorySection")
  .section.panel.panel-default.printable-area
    .panel-heading
      .show-on-print
        +merchantPrintingHeader
        .printing-info
          .document-name {{name}}

      table.lemon-grid: tr
        th(style="width:auto") SẢN PHẨM
        th.number(style="width:80px") SL
        th(style="width:100px; text-align:center") ĐƠN VỊ
        th.number(style="width:120px") ĐƠN GIÁ
        th.number(style="width:175px") THÀNH TIỀN

    .panel-body.debt-details
      table.lemon-grid.safe
        tr
          th(style="width:auto")
          th(style="width:80px")
          th(style="width:100px")
          th(style="width:120px")
          th(style="width:182px")

        each allImports
          +providerManagementImportDetails this

        tr.editors
          td(colspan="1"): input.transaction-field(name='payImportDescription' type="text" size="10" placeholder="ghi chú trả tiền")
          td(colspan="3"): input.transaction-field.number(name='payImportAmount' type="text" size="10" placeholder="số tiền")
          td(colspan="1"): .lemon.rounded.btn.lime.icon-money.pull-right.createTransaction(class="{{isNotDisabled 'allowCreateTransactionOfImport'}}")

    .panel-footer
      .right-float
        span.s5 TỔNG NỢ:
        span.s3 <b>{{formatNumber debtTotalCash}}</b> VNĐ