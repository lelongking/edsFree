template(name="providerManagement")
  #content.modern
    .dual-content
      .dual-detail-wrapper
        .dual-detail
          .nano: .nano-content
            +providerManagementOverviewSection  getSession 'providerManagementCurrentProvider'
            +providerManagementImportsHistorySection getSession 'providerManagementProviderId'
      .dual-addon
        .search-filter.icon-search-8
          input(name='searchFilter' type="text" placeholder="tìm nhà cung cấp...")
          if creationMode
            .lemon.btn.rounded.tiny.lime.icon-plus-6.create-command.createProviderBtn

        .nano: .nano-content
          .list
            each providerLists
              .doc-item(class="{{activeClass 'providerManagementCurrentProvider'}}")
                .avatar-wrapper: .avatar-image(class="missing"
                style="background-image:url('')") {{aliasLetter firstName}}
                .doc-info
                  .title {{name}}
                  .sub-title {{description}}